{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "domain-lib": ["shared/domain-lib/src"],
      "infrastructure-lib": ["shared/infrastructure-lib/src"],
      "@learning-resource/domain": ["learning-resource/domain/src"],
      "@learning-resource/application": ["learning-resource/application/src"],
      "@user/domain": ["user/domain/src"],
      "@user/application": ["user/application/src"],
      "@recomendation/domain": ["recomendation/domain/src"],
      "@recomendation/application": ["recomendation/application/src"]
    },
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "verbatimModuleSyntax": true
  },
  "files": [],
  "references": [
    { "path": "./shared/domain-lib" },
    { "path": "./shared/infrastructure-lib" },
    { "path": "./learning-resource/domain" },
    { "path": "./learning-resource/application" },
    { "path": "./user/domain" },
    { "path": "./user/application" },
    { "path": "./recomendation/domain" },
    { "path": "./recomendation/application" }
  ]
}
