{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "domain-lib": ["shared/domain-lib/src"],
      "domain-lib/*": ["shared/domain-lib/src/*"]
    },
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["shared/**/*", "learning-resource/**/*", "User/**/*"],
  "exclude": ["node_modules", "dist"]
}
