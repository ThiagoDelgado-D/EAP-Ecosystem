{
  "name": "EAP-Ecosystem",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "packageManager": "yarn@4.9.2",
  "workspaces": [
    "shared/domain-lib",
    "shared/infrastructure-lib",
    "shared/application",
    "learning-resource/domain",
    "learning-resource/application",
    "learning-resource/infrastructure",
    "user/domain",
    "user/application",
    "user/infrastructure"
  ],
  "devDependencies": {
    "@types/node": "^24.9.2",
    "typescript": "^5.9.3"
  },
  "scripts": {
    "build": "yarn workspaces foreach -A -tv run build",
    "test:ci": "yarn workspaces foreach -A -tv run test --run",
    "type-check": "tsc --noEmit",
    "pre-pr": "yarn type-check && yarn test:ci && yarn build"
  },
  "engines": {
    "node": ">=20.0.0",
    "yarn": ">=4.0.0"
  }
}